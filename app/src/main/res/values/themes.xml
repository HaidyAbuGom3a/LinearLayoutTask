<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.LinearLayout" parent="Theme.AppCompat.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>
    
    <style name="roundedImage" parent="">
        <item name="cornerSize">@dimen/radius_small</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="text_style" parent="">
        <item name="android:textSize">@dimen/text_normal</item>
    </style>

    <style name="text_style.title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_large</item>
    </style>

    <style name="text_style.content_medium">
        <item name="android:textColor">@color/content</item>
    </style>

</resources>